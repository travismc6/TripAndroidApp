<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bitewolf.tripsie.EnterCodeActivity">

    <LinearLayout
        android:id="@+id/LayoutCode"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:text="Enter Trip code that we sent to you"
            android:textSize="18.0dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:maxEms="5"
            android:gravity="center"
            android:id="@+id/EnterCodeCode"
            android:maxLength="5"
            android:textSize="36.0dp"
            android:layout_marginTop="15.0dp"
            android:textAlignment="center"
            android:text="ABZCP"
            android:layout_width="150.0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/EnterCodeSubmitButton"
            android:padding="15.0dp"
            android:textSize="20.0dp"
            android:layout_marginTop="25.0dp"
            android:text="Submit Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageView

        android:maxHeight="256.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-30.0dp"

        android:layout_gravity="right"
        android:src="@drawable/postcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
