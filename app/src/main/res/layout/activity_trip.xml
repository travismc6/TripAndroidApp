<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bitewolf.tripsie.TripDetailActivity">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="22.0sp"
                android:textStyle="bold"
                android:text="08/08/15"
                android:id="@+id/TripDetailDeparting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="18.0dp"
                android:layout_marginLeft="35.0dp"
                android:text="to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="10.0dp"
                android:layout_marginTop="5.0dp"
                android:textSize="22.0sp"
                android:textStyle="bold"
                android:text="08/12/15"
                android:id="@+id/TripDetailReturning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:layout_marginBottom="10.0dp"
                android:id="@+id/TripDetailsRadioGroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/TripDetailInRadio"
                    android:text="I'm In!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/TripDetailOutRadio"
                    android:layout_marginLeft="30.0dp"
                    android:text="I'm Out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </RadioGroup>



            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TripDetailDate"
                android:padding="3dip" />

            <LinearLayout
                android:layout_marginTop="15.0dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="0.0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:text="Code: " />

                <TextView
                    android:layout_marginBottom="5.0dp"
                    android:id="@+id/TripDetailCode"
                    android:text="DLKFJD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:text="Message" />
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TripDetailDescription"
                android:padding="3dip" />

            <TextView
                android:layout_marginTop="15.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="Invitees" />

            <ListView

                android:layout_weight="1.0"
                android:id="@+id/TripDetailUserList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </LinearLayout>




    <ImageView

        android:maxHeight="200.0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_gravity="right"
        android:src="@drawable/reception_bell"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:visibility="invisible" />


</RelativeLayout>
